@model EmployeeViewModel
@{
    ViewData["Title"] = "Employee View Data";
}

<h2>Form Add Product</h2>

<form asp-action="Save" method="post">
    <div class="form-group">
        <label asp-for="Id">Product Id</label>
        <input asp-for="Id" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="EmployeeName">Employee Name</label>
        <input asp-for="EmployeeName" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Email">Email</label>
        <input asp-for="Email" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Position">Position</label>
        <input asp-for="Position" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Experience">Experience</label>
        <input asp-for="Experience" class="form-control">
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
