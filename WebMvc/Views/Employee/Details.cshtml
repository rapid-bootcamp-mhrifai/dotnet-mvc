@model EmployeeViewModel

@{
    ViewData["Title"] = "Employee Details";
}

<h2>Employee Detail</h2>
<table class="table tab-content">
    <tbody>
        <tr>
            <th>ID</th>
            <td>@Model.Id</td>
        </tr>
        <tr>
            <th>Employee Name</th>
            <td>@Model.EmployeeName</td>
        </tr>

        <tr>
            <th>Email</th>
            <td>@Model.Email</td>
        </tr>
        <tr>
            <th>Position</th>
            <td>@Model.Position</td>
        </tr>
        <tr>
            <th>Experience</th>
            <td>@Model.Experience</td>
        </tr>
    </tbody>
</table>
